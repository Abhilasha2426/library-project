	public boolean addBook(BookInfo bookInfo, LinkedList li) {
		boolean isAdded =false;
		LinkedList ll=null;
		if(bookInfo != null) {
			ll=new LinkedList();
			ll.add(bookInfo.getBookName());
			for(int i=0; i< li.size();i++) {
				ll.add(li.get(i));
			}
			if(DbStore.bookDb(ll)){
				System.out.println("Book Id"+ DbStore.temp1);
				isAdded=true;
			}
		}
		return false;
	}

